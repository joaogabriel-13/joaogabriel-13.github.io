/* ---------- SIDEBAR ---------- */
.side-bar {
  background: #0c326f !important;
  width: 22rem !important;
  padding-top: 0 !important;
  padding-bottom: 2rem;
  transition: transform 0.3s ease;
}

/* Cabeçalho custom da sidebar */
.site-header-custom {
  background: #163d83;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1.25rem 1rem;
  position: sticky;
  top: 0;
  z-index: 1;
}

.site-header-custom img {
  width: 4.5rem;
  height: auto;
}

.site-header-custom span {
  color: #fff;
  font-weight: 600;
  line-height: 1.2;
}

.sidebar-nav {
  margin-top: 0.5rem;
}

.sidebar-nav a {
  color: #fff !important;
}

.sidebar-nav a:hover {
  color: #f0f0f0 !important;
}

/* ---------- MOBILE NAV ---------- */
#menu-button {
  display: none;
  position: absolute;
  top: 1rem;
  left: 1rem;
  background: none;
  border: none;
  font-size: 1.5rem;
  z-index: 1002;
  color: #fff;
  /* Note: A cor pode precisar de ajuste dependendo do fundo */
}

@media (max-width: 768px) {

  /* mostra botão */
  #menu-button {
    display: block !important;
  }

  /* esconde a sidebar no mobile */
  body:not(.sidebar-visible) .side-bar {
    transform: translateX(-100%);
  }

  /* mostra sidebar quando clicado */
  body.sidebar-visible .side-bar {
    transform: translateX(0);
  }
}

/* ---------- BUSCA ---------- */
.search-results {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  max-height: 50vh;
  overflow-y: auto;
  background: #fff;
  border: 1px solid #d0d0d0;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
  z-index: 1001;
}

.search-results.active {
  display: block;
}

.search-results ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.search-results li a {
  display: block;
  padding: 0.6rem 1rem;
  color: #0c326f;
  text-decoration: none;
}

.search-results li a:hover {
  background: #e5efff;
}

/* ---------- SKIP-LINK ---------- */
.skip-to-main {
  position: absolute;
  left: -999px;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

.skip-to-main:focus {
  position: static;
  width: auto;
  height: auto;
  padding: 0.5rem;
  background: #fff;
  z-index: 1003;
}