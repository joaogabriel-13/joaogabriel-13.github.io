{%- comment -%}
  Header customizado:
  - ☰ para mobile
  - logo + título
  - search original
  - aux_links do tema
{%- endcomment -%}

<header class="site-header">
  <!-- 1) botão mobile -->
  <button
    id="menu-button"
    class="site-button btn-reset"
    aria-label="Toggle menu"
    aria-pressed="false">
    ☰
  </button>

  <!-- 2) logo + título -->
  <a href="{{ '/' | relative_url }}" class="site-title lh-tight">
    <img src="{{ '/assets/sus-logo.png' | relative_url }}" alt="Logo SUS">
    <span>Meu Repositório de Arquivos</span>
  </a>

  <!-- 3) campo de busca original -->
  {% if site.search_enabled != false %}
    {% include components/search_header.html %}
  {% endif %}

  <!-- 4) links auxiliares (se houver) -->
  {% if site.aux_links %}
    {% include components/aux_nav.html %}
  {% endif %}
</header>
